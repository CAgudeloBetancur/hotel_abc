@model ErrorViewModel

@{
    ViewData["Title"] = "NotFound";
    Layout = null;
}

<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <title>Página no encontrada</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/HotelABC.styles.css" asp-append-version="true" />
    </head>

    <body>
        <div class="p-6 mt-5">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div class="container text-center mt-5">
                <h1 class="display-1">404</h1>
                <h2 class="text-muted">¡Ups! Algo se perdió en el camino...</h2>
                <p class="lead">
                    La página <code>@Model.OriginalPath</code> no existe.
                </p>
                <a href="/" class="btn btn-primary">Volver al inicio</a>
                @if (Model.ShowRequestId)
                {
                    <div class="mt-3">
                        <small class="text-muted">ID de solicitud: @Model.RequestId</small>
                    </div>
                }
            </div>
        </div>
    </body>
</html>
